<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
x:Class="AcademiaDoZe.Presentation.AppMaui.Views.ConfigPage"
Title="Configurações">
    <ScrollView>
        <StackLayout Spacing="20">
            <!-- Tema -->
            <Border Style="{StaticResource CardBorder}" Margin="15,10">
                <StackLayout Spacing="15">
                    <Label Text="Tema" Style="{StaticResource SubHeadline}"/>
                    <StackLayout Spacing="5">
                        <Label Text="Tema" />
                        <Picker x:Name="TemaPicker">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>light</x:String>
                                    <x:String>dark</x:String>
                                    <x:String>system</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </StackLayout>
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <!-- Botão Cancelar com ícone -->
                        <Button Grid.Column="0" Clicked="OnCancelarClicked" Style="{StaticResource ButtonSecondary}" HeightRequest="45" Padding="0,0,10,0">
                            <Button.ImageSource>
                                <FontImageSource FontFamily="MaterialIcons" Glyph="&#xe5c9;" Color="White" Size="20" />
                                <!-- Ícone de fechar/cancelar -->
                            </Button.ImageSource>
                            <Button.Text>Cancelar</Button.Text>
                        </Button>
                        <!-- Botão Salvar Tema com ícone -->
                        <Button Grid.Column="1" Clicked="OnSalvarTemaClicked" Style="{StaticResource ButtonPrimary}" HeightRequest="45" Padding="0,0,10,0">
                            <Button.ImageSource>
                                <FontImageSource FontFamily="MaterialIcons" Glyph="&#xe161;" Color="White" Size="20" />
                                <!-- Ícone de salvar -->
                            </Button.ImageSource>
                            <Button.Text>Salvar Tema</Button.Text>
                        </Button>
                    </Grid>
                </StackLayout>
            </Border>

            <!-- Cultura -->
            <Border Style="{StaticResource CardBorder}" Margin="15,10">

                <StackLayout Spacing="15">
                    <Label Text="Cultura" Style="{StaticResource SubHeadline}"/>
                    <StackLayout Spacing="5">
                        <Label Text="Cultura" />
                        <Picker x:Name="CulturaPicker">
                            <Picker.ItemsSource>
                                <x:Array Type="{x:Type x:String}">
                                    <x:String>en-US</x:String>
                                    <x:String>es-ES</x:String>
                                    <x:String>pt-BR</x:String>
                                </x:Array>
                            </Picker.ItemsSource>
                        </Picker>
                    </StackLayout>
                </StackLayout>
            </Border>

            <!-- Credenciais do Banco -->
            <Border Style="{StaticResource CardBorder}" Margin="15,10">
                <StackLayout Spacing="15">
                    <Label Text="Credenciais do Banco" Style="{StaticResource SubHeadline}"/>
                    <Grid ColumnDefinitions="*" ColumnSpacing="10">
                        <StackLayout Spacing="5" Grid.Column="0">
                            <Label Text="Tipo"/>
                            <Picker x:Name="DatabaseTypePicker" SelectedIndexChanged="OnEntryCompleted"/>
                        </StackLayout>
                    </Grid>
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <StackLayout Spacing="5" Grid.Column="0">
                            <Label Text="Servidor"/>
                            <Entry x:Name="ServidorEntry" Placeholder="Digite o servidor..." Completed="OnEntryCompleted"/>
                        </StackLayout>
                        <StackLayout Spacing="5" Grid.Column="1">
                            <Label Text="Banco"/>
                            <Entry x:Name="BancoEntry" Placeholder="Digite o nome do banco..." Completed="OnEntryCompleted"/>
                        </StackLayout>
                    </Grid>
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <StackLayout Spacing="5" Grid.Column="0">
                            <Label Text="Usuário"/>
                            <Entry x:Name="UsuarioEntry" Placeholder="Digite o usuário..." Completed="OnEntryCompleted"/>
                        </StackLayout>
                        <StackLayout Spacing="5" Grid.Column="1">
                            <Label Text="Senha"/>
                            <Entry x:Name="SenhaEntry" Placeholder="Digite a senha..." IsPassword="True" Completed="OnEntryCompleted"/>
                        </StackLayout>
                    </Grid>
                    <StackLayout Spacing="5">
                        <Label Text="Complemento"/>
                        <Entry x:Name="ComplementoEntry" Placeholder="Digite o complemento..." Completed="OnEntryCompleted"/>
                    </StackLayout>
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="10">
                        <!-- Botão Cancelar com ícone -->
                        <Button Grid.Column="0" Clicked="OnCancelarClicked" Style="{StaticResource ButtonSecondary}" HeightRequest="45" Padding="0,0,10,0">
                            <Button.ImageSource>
                                <FontImageSource FontFamily="MaterialIcons" Glyph="&#xe5c9;" Color="White" Size="20" />
                                <!-- Ícone de fechar/cancelar -->
                            </Button.ImageSource>
                            <Button.Text>Cancelar</Button.Text>
                        </Button>
                        <!-- Botão Salvar BD com ícone -->
                        <Button Grid.Column="1" Clicked="OnSalvarBdClicked" Style="{StaticResource ButtonPrimary}" HeightRequest="45" Padding="0,0,10,0">
                            <Button.ImageSource>
                                <FontImageSource FontFamily="MaterialIcons" Glyph="&#xe161;" Color="White" Size="20" />
                                <!-- Ícone de salvar -->
                            </Button.ImageSource>
                            <Button.Text>Salvar BD</Button.Text>
                        </Button>
                    </Grid>
                </StackLayout>
            </Border>

        </StackLayout>
    </ScrollView>
</ContentPage>